source $HOME/.config/nvim/modular_build/general_settings.vim
source $HOME/.config/nvim/modular_build/leader_general.vim
source $HOME/.config/nvim/modular_build/leader_no_plugins.vim
source $HOME/.config/nvim/colorschemes/dracula.vim

set cursorline

" Coursor appearance -- depends on mode
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

" Make coursor shape immidiate
set timeoutlen=1000
set ttimeoutlen=1

" Statusline
set laststatus=2
set statusline=
set statusline=\ %t\ \|\ %M\ %=\ %{&filetype}\ \|\ %{&fileencoding?&fileencoding:&encoding}\ \|\ %{&fileformat}\ \|\ %2l/%L:\ %2v\ 


" No welcome message
set shortmess+=I

" Żeby terminal był przezroczysty
hi Normal guibg=NONE ctermbg=NONE

" Żeby linia była zaznaczona bez koloru
hi CursorLine   cterm=NONE ctermbg=NONE ctermfg=NONE
