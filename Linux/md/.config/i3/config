# Bindy
bindsym $mod+b exec brave-browser
bindsym $mod+Shift+b exec firefox
bindsym Mod1+b exec brave-browser
bindsym $mod+Shift+s exec "flameshot gui"
bindsym $mod+x exec --no-startup-id nemo
bindsym $mod+n exec alacritty -e nvim

# Pulse Audio controls
bindsym $mod+bracketright exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym $mod+p exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym $mod+bracketleft exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym $mod+Ctrl+bracketleft exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 100% && $refresh_i3status

# Spotify next/prev
bindsym $mod+Shift+bracketleft exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym $mod+Shift+bracketright exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+Shift+p exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# Uruchamianie programów
# rofi-theme-selector, żeby ustawić wygląd
bindsym $mod+a exec --no-startup-id "rofi -i -show drun -modi drun -show-icons -theme-str 'element-icon { size: 1.8em;}'"
bindsym $mod+Shift+Return exec --no-startup-id "rofi -i -show drun -modi drun -show-icons -theme-str 'element-icon { size: 1.8em;}'"
bindsym Mod1+Shift+Return exec --no-startup-id "rofi -i -show drun -modi drun -show-icons -theme-str 'element-icon { size: 1.8em;}'"
bindsym $mod+Tab exec --no-startup-id "rofi -show window -show-icons -theme-str 'element-icon { size: 1.8em;}'"

